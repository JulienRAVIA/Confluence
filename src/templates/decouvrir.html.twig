{% extends 'includes/template.html.twig' %}

{% block title %}Découvrir{% endblock %}

{% block body %}
    <div class="jumbotron" id="jumbotron-menu" style="background-image: url('img/photos/unbopon.png');">
        <div class="container">
            <h4>Découvrir</h4>
        </div>
    </div>
    <div class="container">
        {# <div class="row justify-content-end">
            <select class="custom-select col-3" id="types">
                <option selected>Choisissez un type de lieu :</option>
            {% for type in types %}
                <option value="{{ type.id }}">{{ type.libelle_fr }}</option>
            {% endfor %}
            </select>
        </div> #}
        <div class="row justify-content-end">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a href="">
                        <i class="fa fa-images"></i> Galerie
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-3">
                <ul class="nav  flex-column">
                    {% for type in types %}
                        <li class="nav-item">
                          <a class="nav-link active" href="#"><i class="fa fa-{{ type.icone }}"></i> {{ type.libelle_fr }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-9">
                {% for lieu in lieux|slice(1, 5) %}
                    <div class="row">
                        <div class="col-md-12">
                        <div class="card">
                            {# <img class="mr-3" src="img\photos\photo_{{lieu.id}}.jpg" alt="Generic placeholder image" width=10%> #}
                            <div class="card-body">
                                <div class="float-right"><a href=""><i class="fa fa-map-marker-alt"></i></a></div>

                                <h5 class="mt-0">{{lieu.nom}}  {{lieu.id}}</h5>
                                {{lieu.description_fr|raw}}
                            </div>
                        </div>
                        </div>
                    </div>
                {% endfor %}  
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/discover.js"></script>
{% endblock %}