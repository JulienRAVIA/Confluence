{% extends 'includes/template.html.twig' %}

{% set page = 'about' %}

{% block title %}{{ trad.about.title }}{% endblock %}

{% block body %}
    <div class="jumbotron-header" style="background-image: url('/api/photos/Panorama_architecture_confluence.jpg?w=2000');">
        <h4 class="jumbotron-title">{{ trad.about.title }}</h4>
    </div>
    <div class="container">
        <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="dates-tab" data-toggle="tab" href="#dates" role="tab" aria-controls="dates" aria-selected="true">{{ trad.about.tabs.dates }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="chiffres-tab" data-toggle="tab" href="#chiffres" role="tab" aria-controls="chiffres" aria-selected="false">{{ trad.about.tabs.numbers }}</a>
          </li>
        </ul>
        <div class="card border-top-0 rounded-0">
            <div class="card-body">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="dates" role="tabpanel" aria-labelledby="dates-tab">
                        <iframe src='https://cdn.knightlab.com/libs/timeline3/latest/embed/index.html?source={{ trad.about.timeline }}&font=Default&lang=en&initial_zoom=2&height=650' 
                                width='100%' height='650' webkitallowfullscreen mozallowfullscreen allowfullscreen frameborder='0'></iframe>
                    </div>
                    <div class="tab-pane fade" id="chiffres" role="tabpanel" aria-labelledby="chiffres-tab">
                        <div class="container">
                            <div class="row justify-content-center" id="numbers">
                              {% for data in trad.about.datas %}
                                <div class="col-md-4 number">
                                  <h4>{{ data.title }}</h4>
                                  <p>{{ data.description }}</p>
                                </div>
                              {% endfor %}
                            </div> {# ./row #}
                        </div> {# ./container #}
                    </div> {# ./tab-pane fade #}
                </div> {# ./tab-content #}
            </div> {# ./card-body #}
        </div> {# ./card #}
    </div>
{% endblock %}